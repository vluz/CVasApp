                        VerticalOptions="Center"
                        HorizontalOptions="Center">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="White" />
                        </Image.Behaviors>
                        <Image.Shadow>
                            <Shadow
