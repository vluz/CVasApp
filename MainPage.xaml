                </Border>
            <Border
                BackgroundColor="#15181b"
                Margin="0"
                Padding="0,30"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 30 30 0 0">
                <Label
                    Grid.Column="1"
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Padding="0,20"
                    Text="Something"
                    FontFamily="FontSimplifica"
                    SemanticProperties.HeadingLevel="Level1"
                    TextColor="White"
                    FontSize="30"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </Border>
