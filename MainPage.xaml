                        <Label
                            Padding="12"
                            Grid.Column="1"
                            Grid.Row="2"
                            FontFamily="FontCHLight"
                            Text="vluz@me.com"
                            TextColor="White"
                            FontSize="12"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>
                    </Grid>
                </Border>
                <Border
                    BackgroundColor="#15181b"
                    Margin="20"
                    HorizontalOptions="FillAndExpand"
                    HeightRequest="300"
                    StrokeThickness="0"
                    Stroke="black"
                    StrokeShape="RoundRectangle 20">
                <Border.Shadow>
                    <Shadow
                            Offset="5,5"
                            Opacity="1"
                            Radius="30">
                        <Shadow.Brush>
                            <LinearGradientBrush>
                                <GradientStop Color="White"
                                    Offset="0.1" />
                                <GradientStop Color="Black"
                                    Offset="0.5" />
                                <GradientStop Color="Black"
                                    Offset="1.1" />
                            </LinearGradientBrush>
                        </Shadow.Brush>
                    </Shadow>
                </Border.Shadow>
                <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
