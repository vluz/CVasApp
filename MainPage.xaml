<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CVasApp.MainPage"
             Shell.NavBarIsVisible="False">


    <ScrollView 
        VerticalScrollBarVisibility="Never" 
        HorizontalScrollBarVisibility="Never" 
        BackgroundColor="#2f3338" 
        Margin="0">
        <VerticalStackLayout
            Spacing="0"
            Padding="0,0"
            VerticalOptions="Start">
            <Border
                BackgroundColor="#15181b"
                Margin="0"
                Padding="0,-10"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 0 0 30 30">
            <Label
                    Grid.Column="1"
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Padding="0,20"
                    Text="CV as App"
                    FontFamily="FontCHLight"
                    SemanticProperties.HeadingLevel="Level1"
                    TextColor="White"
                    FontSize="20"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </Border>
                <Border
                    BackgroundColor="#15181b"
                    Margin="20"
                    HorizontalOptions="FillAndExpand"
                    HeightRequest="200"
                    StrokeThickness="0"
                    Stroke="black"
                    StrokeShape="RoundRectangle 20">
                    <Border.Shadow>
                        <Shadow
                            Offset="5,5"
                            Opacity="1"
                            Radius="40">
                        <Shadow.Brush>
                            <LinearGradientBrush>
                                <GradientStop Color="White"
                                    Offset="0.1" />
                                <GradientStop Color="Black"
                                    Offset="0.3" />
                                <GradientStop Color="Black"
                                    Offset="1.1" />
                            </LinearGradientBrush>
                        </Shadow.Brush>
                    </Shadow>
                    </Border.Shadow>

                <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height=".5*"/>
                            <RowDefinition Height=".5*"/>
                            <RowDefinition Height=".5*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border
                            Grid.Column="0"
                            Grid.Row="0"
                            Grid.RowSpan="4"
                            WidthRequest="150"
                            HeightRequest="150"
                            StrokeThickness="2"
                            Stroke="black"
                            StrokeShape="RoundRectangle 100">
                        <Border.Shadow>
                            <Shadow
                            Offset="5,5"
                            Opacity="1"
                            Radius="40">
                                <Shadow.Brush>
                                    <LinearGradientBrush>
                                        <GradientStop Color="White"
                                            Offset="0.1" />
                                        <GradientStop Color="Black"
                                            Offset="0.5" />
                                        <GradientStop Color="Black"
                                            Offset="1.1" />
                                    </LinearGradientBrush>
                                </Shadow.Brush>
                            </Shadow>
                        </Border.Shadow>
                        <Image
                                Source="profilepic.png"
                                SemanticProperties.Description="My mug"
                                HeightRequest="200"
                                HorizontalOptions="Center">
                            
                        </Image>
                        </Border>
                        <Label
                            Grid.Column="1"
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Text="Victor Luz"
                            FontFamily="FontCHLight"
                            SemanticProperties.HeadingLevel="Level1"
                            TextColor="White"
                            FontSize="30"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>
                        <Image 
                            Grid.Column="1"
                            Grid.Row="1"
                            WidthRequest="10"
                            HeightRequest="10"
                            HorizontalOptions="Start"
                            VerticalOptions="Center">
                            <Image.Source>
                                <FontImageSource FontFamily="FontSolid" Glyph="&#xf095;" />
                            </Image.Source>
                        </Image>
                        <Label 
                            Padding="12"
                            Grid.Column="1"
                            Grid.Row="1"    
                            FontFamily="FontCHLight"
                            Text="932673261"
                            TextColor="White"
                            FontSize="12"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>
                            <Image 
                                Grid.Column="2"
                                Grid.Row="1"
                                WidthRequest="10"
                                HeightRequest="10"
                                HorizontalOptions="Start"
                                VerticalOptions="Center">
                                <Image.Source>
                                    <FontImageSource FontFamily="FontBrands" Glyph="&#xf2c6;" />
                                </Image.Source>
                            </Image>
                        <Label
                            Padding="12"
                            Grid.Column="2"
                            Grid.Row="1"
                            FontFamily="FontCHLight"
                            Text="Telegram"
                            TextColor="White"
                            FontSize="12"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>
                        <Image 
                            Grid.Column="2"
                            Grid.Row="2"
                            WidthRequest="10"
                            HeightRequest="10"
                            HorizontalOptions="Start"
                            VerticalOptions="Center">
                            <Image.Source>
                                <FontImageSource FontFamily="FontSolid" Glyph="&#xf075;" />
                            </Image.Source>
