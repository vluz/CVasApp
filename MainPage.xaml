                        SemanticProperties.Description="My mug"
                        VerticalOptions="Center"
                        HorizontalOptions="Center">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="White" />
                        </Image.Behaviors>
                    </Image>
                    <Label
                        Padding="12"
                        Grid.Column="1"
                        Grid.Row="1"
                        FontFamily="FontCHLight"
                        Text="Education"
                        TextColor="White"
                        FontSize="12"
                        HorizontalOptions="Center"
                        VerticalOptions="End"/>
                    <Image
                        Source="otherinfo.svg"
                        Grid.Column="1"
                        Grid.Row="2"
                        SemanticProperties.Description="My mug"
                        VerticalOptions="Center"
                        HorizontalOptions="Center">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="White" />
                        </Image.Behaviors>
                    </Image>
                    <Label
                        Padding="12"
                        Grid.Column="1"
                        Grid.Row="2"
                        FontFamily="FontCHLight"
                        Text="Other Information"
                        TextColor="White"
                        FontSize="12"
                        HorizontalOptions="Center"
                        VerticalOptions="End"/>
                    <Image
                        Source="cert.svg"
                        Grid.Column="2"
                        Grid.Row="1"
                        SemanticProperties.Description="My mug"
                        VerticalOptions="Center"
                        HorizontalOptions="Center">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="White" />
