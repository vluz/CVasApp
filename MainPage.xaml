                        Grid.Column="2"
                        Grid.Row="2"
                        SemanticProperties.Description="My mug"
                        VerticalOptions="Center"
                        HorizontalOptions="Center">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="White" />
                        </Image.Behaviors>
                    </Image>
                    <Label
                        Padding="12"
                        Grid.Column="2"
                        Grid.Row="2"
                        FontFamily="FontCHLight"
                        Text="Options"
                        TextColor="White"
                        FontSize="12"
                        HorizontalOptions="Center"
                        VerticalOptions="End"/>
