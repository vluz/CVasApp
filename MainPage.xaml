                    <Image
                        Source="profile.svg"
                        Grid.Column="0"
                        Grid.Row="0"
                        SemanticProperties.Description="My mug"
                        VerticalOptions="Center"
                        HorizontalOptions="Center">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="White" />
