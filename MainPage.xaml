                            Grid.Row="2"
                            WidthRequest="10"
                            HeightRequest="10"
                            HorizontalOptions="Start"
                            VerticalOptions="Center">
                            <Image.Source>
                                <FontImageSource FontFamily="FontSolid" Glyph="&#xf0e0;" />
